{% block menu %}
    <nav class="navbar">
        <div class="container-fluid">
            {{ block('menu_header') }}
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="{{ id }}">
                <ul class="nav navbar-nav">
                    {{ block('menu_nodes') }}
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}

{% block menu_header %}
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
        {{ block('menu_toggle') }}
        {% if brand %}
            <a class="navbar-brand" href="#">{{ brand|raw }}</a>
        {% endif %}
    </div>
{% endblock %}

{% block menu_toggle %}
    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#{{ id }}" aria-expanded="false">
        <span class="sr-only">{{ 'Toggle navigation'|trans }}</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </button>
{% endblock %}

{% block menu_nodes %}
    {% for node in nodes %}
        {{ block('menu_node') }}
    {% endfor %}
{% endblock %}

{% block menu_node %}
    {% set hasChildren = node.children|length > 0 %}
    <li {% if hasChildren %}class="dropdown"{% endif %}>
        {% if hasChildren %}
            {{ block('menu_dropdown') }}
        {% else %}
            {{ block('menu_link') }}
        {% endif %}
    </li>
{% endblock %}

{% block menu_link %}
    <a href="{{ node.url }}" title="{{ node.title|default(node.name) }}">{{ node.name }}</a>
{% endblock %}

{% block menu_dropdown %}
    {% set nodes = node.children %}
    <a href="{{ node.url }}" title="{{ node.title|default(node.name) }}" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
        {{ node.name }}
        <span class="caret"></span>
    </a>
    <ul class="dropdown-menu">
        {{ block('menu_nodes') }}
    </ul>
{% endblock %}